          </div>
          <!-- button -->
          <div class="modal-footer">
            <a class="about-footer" href="https://github.com/stalintouch"><i class="fa fa-github fa-3x" aria-hidden="true"></i></a>
            <a class="about-footer" href="https://ca.linkedin.com/in/stalin-vasquez-b1717a127"><i class="fa fa-linkedin-square fa-3x" aria-hidden="true"></i></a>
            <a class="about-footer" href="https://resume.creddle.io/resume/d67a5bplva9"><i class="fa fa-briefcase fa-3x" aria-hidden="true"></i></a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
  <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
