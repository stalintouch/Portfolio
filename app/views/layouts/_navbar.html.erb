<!-- contact modal -->
<div class="container">
  <div class="modal fade" id="contact">
    <div class="modal-dialog">
      <div class="modal-content profile-picture">
        <!-- header -->
        <div class="modal-header">
          <div class="modal-title"><h3 style="color: white">Contact form</h3></div>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- body -->

        <div class="modal-body">
          <h4 style="color:white">Please leave you name, email address and a short note on how and when to contact you</h4>
          <div class="modal-footer">
            <a class="about-footer" href="https://github.com/stalintouch"><i class="fa fa-github fa-3x" aria-hidden="true"></i></a>
            <a class="about-footer" href="https://ca.linkedin.com/in/stalin-vasquez-b1717a127"><i class="fa fa-linkedin-square fa-3x" aria-hidden="true"></i></a>
            <a class="about-footer" href="https://resume.creddle.io/resume/d67a5bplva9"><i class="fa fa-briefcase fa-3x" aria-hidden="true"></i></a>
          </div>
          <%= form_for @contact do |f| %>
          <%= f.text_field :name, placeholder: 'Your Name',required: true, class: "form-control" %>
          <br>
          <br>
          <%= f.text_field :email, placeholder: 'Your Email', required: true, class:"form-control" %>
          <br>
          
          <%= f.text_area :message, placeholder: 'Your message', required: true, class: "form-control", rows: "5" %>
          <br>
          <div class="hidden">
            <%= f.label :nickname %><br>
            <%= f.text_field :nickname, hint: 'leave this field blank' %>
          </div>
          <%= f.submit 'Send Message', class: 'btn btn-primary btn-block' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>

