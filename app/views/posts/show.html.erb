<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
  <p class="date"><%= @post.created_at.strftime('%A, %B %d') %></p>
    <h1><%= @post.title %></h1>
    <hr>
  </header>

  <div id="content">
   <%= markdown @post.content %>
  </div>
  <% if user_signed_in? %>
    <div id="admin_links">
      <%= link_to "Edit", edit_post_path %>
      <%= link_to "Delete", post_path, method: :delete, data: { confirm: "Are you sure"} %>
    </div>
  <% end %>
  
  <hr>
  <div id="share_box">
    <p>Share the: "<%= @post.title %>" article </p>
    <a href="#"><i class="fa fa-github" aria-hidden="true"></i></a>
    <a href="#"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
    <a href="#"><i class="fa fa-suitcase" aria-hidden="true"></i></a>
  </div>
  <hr>

  <%= render 'disqus' %>
</div>


