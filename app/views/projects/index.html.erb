<div class="container">
  <%= video_tag "background-video", autoplay:true, id: "video-background" %>
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

      <% @projects.each do |project| %>
        <div class="col-lg-4">
          <div class="project_wrapper">
          <h2><a href="#"><%= link_to project.title, project, class: "title" %></a></h2>
          <%= link_to (image_tag project.image.url(:medium), class: "image img-rounded"), project %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


